<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:paddingEnd="15dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingStart="15dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <ImageView
            android:id="@+id/setting_profile"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="start"
            android:fitsSystemWindows="true"
            android:src="@drawable/default_user"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/setting_tv_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="아이디"
            app:layout_constraintTop_toBottomOf="@+id/setting_profile" />

        <TextView
            android:id="@+id/setting_edittext_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/login_edittext_bg"
            android:hint="아이디 입력"
            android:padding="15dp"
            app:layout_constraintTop_toBottomOf="@+id/setting_tv_id" />

        <TextView
            android:id="@+id/setting_tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="닉네임"
            app:layout_constraintTop_toBottomOf="@+id/setting_edittext_id" />

        <EditText
            android:id="@+id/setting_edittext_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/login_edittext_bg"
            android:hint="닉네임 입력"
            android:padding="15dp"
            app:layout_constraintTop_toBottomOf="@+id/setting_tv_name" />

        <TextView
            android:id="@+id/setting_tv_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="이메일"
            app:layout_constraintTop_toBottomOf="@id/setting_edittext_name" />

        <EditText
            android:id="@+id/setting_edittext_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/login_edittext_bg"
            android:hint="이메일 입력"
            android:inputType="textEmailAddress"
            android:padding="15dp"
            app:layout_constraintTop_toBottomOf="@id/setting_tv_email" />

        <TextView
            android:id="@+id/setting_tv_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="전화번호"
            app:layout_constraintTop_toBottomOf="@id/setting_edittext_email" />

        <EditText
            android:id="@+id/setting_edittext_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/login_edittext_bg"
            android:hint="전화번호 입력"
            android:padding="15dp"
            app:layout_constraintTop_toBottomOf="@+id/setting_tv_phone" />

        <Button
            android:id="@+id/setting_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/login_btn_bg"
            android:padding="15dp"
            android:text="수정하기"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/setting_edittext_phone" />

        <Button
            android:id="@+id/setting_pw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/login_pw_btn_bg"
            android:padding="15dp"
            android:text="비밀번호 변경"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/setting_btn" />

    </android.support.constraint.ConstraintLayout>

</android.support.v4.widget.NestedScrollView>

